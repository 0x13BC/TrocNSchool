<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.ydays.trocynov.trocnshcool">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".vue.DonEtDemandeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".vue.MessageActivity"
            android:label="@string/title_activity_message" />
        <activity
            android:name=".vue.PostActivity"
            android:label="@string/title_activity_post" />
        <activity
            android:name=".vue.NotifActivity"
            android:label="@string/title_activity_notif" />
        <activity
            android:name=".vue.ProfilActivity"
            android:label="@string/title_activity_profil" />
        <activity
            android:name=".vue.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".vue.RegisterActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>